      "constraints": {
        "min": 0,
        "max": 100
      }
    },
    {
      "id": "light_hallway",
      "name": "Hallway Light",
      "type": "actuator",
      "device_class": "light",
      "location": "hallway",
      "capabilities": ["turn_on", "turn_off"],
      "mqtt": {
        "topic": "home/hallway/light/state",
        "command_topic": "home/hallway/light/set",
        "qos": 1
